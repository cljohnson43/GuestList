<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_guest_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_name_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/double_spacing"
            android:padding="@dimen/double_spacing"
            android:textSize="@dimen/font_size"
            tools:text="NAME"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tv_relation_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/double_spacing"
            android:layout_marginRight="@dimen/double_spacing"
            android:layout_marginBottom="@dimen/double_spacing"
            android:padding="@dimen/double_spacing"
            android:textSize="@dimen/font_size"
            tools:text="RELATION"
            app:layout_constraintStart_toStartOf="@id/tv_name_card"
            app:layout_constraintEnd_toEndOf="@id/tv_name_card"
            app:layout_constraintTop_toBottomOf="@id/tv_name_card"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>